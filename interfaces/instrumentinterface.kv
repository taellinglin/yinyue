<InstrumentInterface>:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2

        ScrollView:
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height

                Button:
                    text: 'SubSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('SubSynth')

                Button:
                    text: 'AddSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('AddSynth')

                Button:
                    text: 'StringSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('StringSynth')

                Button:
                    text: 'DrumSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('DrumSynth')

                Button:
                    text: 'WaveSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('WaveSynth')

                Button:
                    text: 'ModSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('ModSynth')

                Button:
                    text: 'SingSynth'
                    size_hint_y: None
                    height: 44
                    on_release: root.select_synth('SingSynth')

    Carousel:
        id: carousel
        size_hint_x: 0.8

